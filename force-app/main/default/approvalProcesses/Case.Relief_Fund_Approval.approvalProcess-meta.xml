<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Relief_Fund__c</field>
        <field>Total_Relief_Fund_Case_Grant__c</field>
        <field>Fund_Available_for_Case_Disbursement__c</field>
        <field>Fund_Disbursement_Transaction_Limit__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>m.saunders@ruralbusinesssupport.org.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Relief Grant Up to $3,000, approval by CEO</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Total_Relief_Fund_Case_Grant__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval by CEO</label>
        <name>Approval_by_CEO</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>m.saunders@ruralbusinesssupport.org.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Relief Grant &gt; $3,000 but &lt; $10,000 approval by CGC on recommendation by CEO.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Total_Relief_Fund_Case_Grant__c</field>
                <operation>greaterThan</operation>
                <value>3000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval by CGC</label>
        <name>Approval_by_CGC</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>m.saunders@ruralbusinesssupport.org.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If  Relief Grant &gt; $10,000 RBS Board on recommendation by CGC</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Total_Relief_Fund_Case_Grant__c</field>
                <operation>greaterThan</operation>
                <value>10000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval by RBS Board</label>
        <name>Approval_by_RBS_Board</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Relief Fund Approval</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.Total_Relief_Fund_Case_Grant__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Relief_Fund_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Relief_Case_Status_Rejected_Close</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_to_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Relief Fund Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_to_pre_approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
